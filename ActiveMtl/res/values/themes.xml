<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/profile_background</item>
        <item name="android:actionMenuTextAppearance">@style/actionbar_text</item>
    </style>
    
    <style name="actionbar_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#FF0000</item>
    </style>

    <style name="suggestion_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="form_textbox">
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/textbox_rounded</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="form_expandablelist">
		<item name="android:background">@drawable/list_rounded</item>
     	<item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>    
    
    <style name="explain_text.focus" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="explain_text.non_focus" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#9F9F9F</item>
    </style>

    <style name="explain_button">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        
    </style>
    
    
</resources>